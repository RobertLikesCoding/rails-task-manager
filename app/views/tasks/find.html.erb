<div class="container my-3">
  <div class="d-flex justify-content-between">
  <h1><%= @task.title %> </h1>
  <div class="border"> <%= link_to "Edit Task", edit_task_path(@task) %> </div>
  </div>

  <p> <%= @task.details %>  </p>

  <div class="d-flex align-items-center mb-2 border">
    <label>
      <%= check_box_tag "task_ids[]", @task.id, @task.completed, id: "task_#{@task.id}_completed" %>
      <% if @task.completed %>
        This task is completed.
      <% else %>
        This task is not completed.
      <% end %>
    </label>
  </div>

  <%= link_to "Back to list", list_path %>

</div>
